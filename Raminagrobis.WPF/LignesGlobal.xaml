<Page x:Class="Raminagrobis.WPF.LignesGlobal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LignesGlobal">

    <Grid>
        <TextBlock Text="Page LignesGlobal" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32px" Margin="266,41,275,365.6"/>
        <ListView Name="lvLigneGlobal" Margin="323,120,22,128.6" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID_panier " Width="80" DisplayMemberBinding="{Binding ID_panier }" />
                    <GridViewColumn Header="Quantite" Width="60" DisplayMemberBinding="{Binding Quantite}" />
                    <GridViewColumn Header="ID_produit" Width="60" DisplayMemberBinding="{Binding ID_produit}" />
