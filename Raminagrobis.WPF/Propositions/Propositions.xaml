<Page x:Class="Raminagrobis.WPF.Propositions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Propositions" Loaded="LoadPage">

    <Grid>
        <ListView Name="lvPropositions" Margin="0,35,0,0">
            <ListView.View>
                <GridView>
                    
                    <GridViewColumn Header="ID" Width="160" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="ID_ligne_global" Width="160" DisplayMemberBinding="{Binding id_ligne_global}" />
                    <GridViewColumn Header="ID_fournisseur" Width="160" DisplayMemberBinding="{Binding id_fournisseur}" />
                    <GridViewColumn Header="ID_produit" Width="160" DisplayMemberBinding="{Binding id_produit}" />
                    <GridViewColumn Header="Prix" Width="160" DisplayMemberBinding="{Binding prix}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
