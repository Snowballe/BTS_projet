<Page x:Class="Raminagrobis.WPF.Produits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Produits">

    <Grid>
        <TextBlock Text="Page Produits" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32px" Margin="304,39,301,367.6"/>
        <ListView Name="lvProduits" Margin="323,120,22,128.6" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Reference " Width="80" DisplayMemberBinding="{Binding Reference }" />
                    <GridViewColumn Header="Libelle" Width="60" DisplayMemberBinding="{Binding Libelle}" />
                    <GridViewColumn Header="Marque" Width="60" DisplayMemberBinding="{Binding Marque}" />
                    <GridViewColumn Header="Actif" Width="60" DisplayMemberBinding="{Binding Actif}" />
                    <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding ID}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Afficher Liste" Margin="524,349,141,71.6" Click="BtnListe"/>
    </Grid>
</Page>
